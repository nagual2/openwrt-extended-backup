{
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "VERSION",
          "regex": "^(?<version>.*)$"
        },
        {
          "type": "generic",
          "path": "scripts/openwrt_full_backup",
          "regex": "VERSION_FALLBACK='(?<version>.*)'"
        },
        {
          "type": "generic",
          "path": "scripts/openwrt_full_restore",
          "regex": "VERSION_FALLBACK='(?<version>.*)'"
        },
        {
          "type": "generic",
          "path": "scripts/user_installed_packages",
          "regex": "VERSION_FALLBACK='(?<version>.*)'"
        }
      ]
    }
  }
}
